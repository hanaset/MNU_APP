<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start"
    android:orientation="vertical">

    <TextView
        android:id="@+id/F_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_light"
        android:padding="10dp"
        android:text="비밀번호 찾기"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="15pt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/F_id_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="153dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/F_phone_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/F_id_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone"
        android:textAlignment="center" />

    <Button
        android:id="@+id/F_find_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/F_phone_edit"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape"
        android:text="찾기"
        android:textColor="#ff33b5ed"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/F_pass_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/F_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:textAlignment="center"
        android:textSize="10pt"
        android:textStyle="bold" />
</RelativeLayout>