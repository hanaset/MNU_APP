<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/L_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_blue_light"
                    android:padding="10dp"
                    android:text="가게이름"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="14pt"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/L_notice_text"
                style="@style/Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="알림 : "
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="7pt"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/L_notice_eidt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="가게 알림 수정란"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/L_notice_edit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape"
                    android:text="수정"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="8pt"
                    android:textStyle="bold" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <ImageButton
                android:id="@+id/L_menu_edit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/colorLongPressedHighlight"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon2" />

            <TextView
                android:id="@+id/L_menu_edit_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_weight="1.00"
                android:background="@drawable/shape"
                android:padding="5dp"
                android:text="메뉴 수정"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="8pt"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ImageButton
                android:id="@+id/L_mem_edit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                app:srcCompat="@drawable/icon4" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:padding="5dp"
                android:text="정보 수정"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="8pt"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ImageButton
                android:id="@+id/L_mem_delete_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                app:srcCompat="@drawable/icon3" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:padding="5dp"
                android:text="회원 탈퇴"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="8pt"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>