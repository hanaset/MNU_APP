<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Join_text"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textAlignment="center"
                android:textSize="15pt"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Join_id_text"
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="ID"
                    android:textAlignment="textStart"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:layout_weight="0.31" />

                <Button
                    android:id="@+id/Join_check_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="아이디 확인" />
            </LinearLayout>

            <EditText
                android:id="@+id/Join_id_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="ID를 입력하세요."
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/Join_pass_text"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textSize="10pt"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Join_pass_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="비밀번호를 입력하세요."
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/Join_pass2_Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="비밀번호를 다시 입력하세요."
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/Join_name_text"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가게 이름"
                android:textSize="10pt"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Join_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="가게이름을 입력하세요."
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/Join_phone_text"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="연락처(배달 가능 연락처)"
                android:textSize="10pt"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Join_phone_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="연락처를 입력하세요."
                android:inputType="phone" />

            <TextView
                android:id="@+id/Join_time_text"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오픈 시간"
                android:textSize="10pt"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Join_time_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="오픈시간대 (ex:수시, 10-22)"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/Join_delivery_text"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="배달 유무"
                android:textSize="10pt"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Join_delivery_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="가능 : 1, 불가능 : 0"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/Join_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textSize="9pt" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>