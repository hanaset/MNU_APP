<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/SL_tabhost">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/SL_tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:text="이전 날"
                            android:layout_height="wrap_content"
                            android:id="@+id/SL_prev_btn"
                            android:layout_width="70dp" />

                        <Button
                            android:text="다음 날"
                            android:id="@+id/SL_next_btn"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:elevation="1dp" />

                        <TextView
                            android:text="오늘날짜"
                            android:textSize="9pt"
                            android:layout_height="wrap_content"
                            android:id="@+id/SL_date_text"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />

                    </RelativeLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="BTL 식단표"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/SL_btl"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:textStyle="normal|bold"
                            android:textSize="11pt" />

                        <TextView
                            android:text="한울관 식단표"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/SL_nomal"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="normal|bold"
                            android:textSize="11pt" />
                    </LinearLayout>

                    <TextView
                        android:text="오전"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SL_morning"
                        android:textAlignment="center"
                        android:textStyle="normal|bold"
                        android:textSize="10pt" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:id="@+id/SL_bmorning_menu"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_height="110dp" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:id="@+id/SL_morning_menu"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_height="110dp" />
                    </LinearLayout>

                    <TextView
                        android:text="오후"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SL_lunch"
                        android:textAlignment="center"
                        android:textStyle="normal|bold"
                        android:textSize="10pt" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:id="@+id/SL_blunch_menu"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_height="110dp" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:id="@+id/SL_lunch_menu"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_height="110dp" />
                    </LinearLayout>

                    <TextView
                        android:text="저녁"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SL_dinner"
                        android:textAlignment="center"
                        android:textStyle="normal|bold"
                        android:textSize="10pt" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:id="@+id/SL_bdinner_menu"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_height="110dp" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:id="@+id/SL_dinner_menu"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_height="110dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/SL_tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <TextView
                        android:text="교수 식단"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="normal|bold"
                        android:id="@+id/SL2_text"
                        android:textSize="11pt" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="월요일"
                            android:layout_margin="2dp"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/SL2_mon_text"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="normal|bold"
                            android:textSize="10pt" />

                        <TextView
                            android:text="화요일"
                            android:layout_margin="2dp"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/SL2_tur_text"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="normal|bold"
                            android:textSize="10pt" />

                        <TextView
                            android:text="수요일"
                            android:layout_margin="2dp"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/SL2_wed_text"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="normal|bold"
                            android:textSize="10pt" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="TextView\nTextView\nTextView\nTextView\nTextView\nTextView"
                            android:layout_margin="2dp"
                            android:id="@+id/SL2_mon_menu"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_height="110dp"
                            android:textSize="7pt"
                            android:layout_width="65dp" />

                        <TextView
                            android:text="TextView\nTextView\nTextView\nTextView\nTextView\nTextView"
                            android:layout_margin="2dp"
                            android:layout_width="65dp"
                            android:id="@+id/SL2_tur_menu"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_height="110dp"
                            android:textSize="7pt" />

                        <TextView
                            android:text="TextView\nTextView\nTextView\nTextView\nTextView\nTextView"
                            android:layout_margin="2dp"
                            android:layout_width="65dp"
                            android:id="@+id/SL2_wed_menu"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_height="110dp"
                            android:textSize="7pt" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="목요일"
                            android:layout_margin="2dp"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/SL2_thu_text"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="normal|bold"
                            android:textSize="10pt" />

                        <TextView
                            android:text="금요일"
                            android:layout_margin="2dp"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/SL2_fri_text"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="normal|bold"
                            android:textSize="10pt" />

                        <TextView
                            android:text="토요일"
                            android:layout_margin="2dp"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/SL2_sat_text"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="normal|bold"
                            android:textSize="10pt" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="TextView\nTextView\nTextView\nTextView\nTextView\nTextView"
                            android:layout_margin="2dp"
                            android:id="@+id/SL2_thu_menu"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_height="110dp"
                            android:textSize="7pt"
                            android:layout_width="65dp" />

                        <TextView
                            android:text="TextView\nTextView\nTextView\nTextView\nTextView\nTextView"
                            android:layout_margin="2dp"
                            android:layout_width="65dp"
                            android:id="@+id/SL2_fri_menu"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_height="110dp"
                            android:textSize="7pt" />

                        <TextView
                            android:text="\n아쉽게도\n없어요"
                            android:layout_margin="2dp"
                            android:layout_width="65dp"
                            android:id="@+id/SL2_sat_menu"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_height="110dp"
                            android:textSize="7pt" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                    <TextView
                        android:text="학식 메뉴"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:id="@+id/SL2_student_text"
                        android:textAlignment="center"
                        android:textStyle="normal|bold"
                        android:textSize="11pt"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="학식(3.500원), 김치볶음밥(3.500원), \n치킨마요덮밥(4.500원), 수제돈까스(4.500원)"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SL_student_menu2"
                        android:textAlignment="center" />

                    <TextView
                        android:text="라면(2.000원), 떡라면(2.500원), 만두라면(2.500원), \n치즈라면(2.500원), 공기밥(500원)"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SL2_student_menu1"
                        android:textAlignment="center" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </TabHost>
</LinearLayout>