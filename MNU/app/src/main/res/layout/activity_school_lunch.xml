<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <TabHost
        android:id="@+id/SL_tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/SL_tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/SL_prev_btn"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/button_style"
                            android:text="이전 날"
                            android:textColor="@android:color/holo_blue_light"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/SL_next_btn"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_margin="5dp"
                            android:background="@drawable/button_style"
                            android:text="다음 날"
                            android:textColor="@android:color/holo_blue_light"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/SL_date_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="오늘날짜"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="9pt"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/SL_btl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="BTL 식단표"
                            android:textAlignment="center"
                            android:textColor="?attr/colorAccent"
                            android:textSize="11pt"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/SL_nomal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="한울관 식단표"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="11pt"
                            android:textStyle="normal|bold" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/SL_morning"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_style"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="오전"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_blue_light"
                            android:textSize="8pt"
                            android:textStyle="normal|bold" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/SL_bmorning_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="110dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="?attr/colorAccent"
                            android:textSize="6pt" />

                        <TextView
                            android:id="@+id/SL_morning_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="110dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="6pt" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/SL_lunch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_style"
                            android:text="오후"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_blue_light"
                            android:textSize="8pt"
                            android:textStyle="normal|bold" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/SL_blunch_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="110dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="?attr/colorAccent"
                            android:textSize="6pt" />

                        <TextView
                            android:id="@+id/SL_lunch_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="110dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="6pt" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/SL_dinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_style"
                            android:text="저녁"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_blue_light"
                            android:textSize="8pt"
                            android:textStyle="normal|bold" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/SL_bdinner_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="110dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="?attr/colorAccent"
                            android:textSize="6pt" />

                        <TextView
                            android:id="@+id/SL_dinner_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="110dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="6pt" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/SL_tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/SL2_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_style"
                        android:text="교수 식단"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_blue_light"
                        android:textSize="11pt"
                        android:textStyle="normal|bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/SL2_mon_text"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:text="월요일"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="10pt"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/SL2_tur_text"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:text="화요일"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="10pt"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/SL2_wed_text"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:text="수요일"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="10pt"
                            android:textStyle="normal|bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/SL2_mon_menu"
                            android:layout_width="65dp"
                            android:layout_height="110dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:text="TextView\nTextView\nTextView\nTextView\nTextView\nTextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="6pt" />

                        <TextView
                            android:id="@+id/SL2_tur_menu"
                            android:layout_width="65dp"
                            android:layout_height="110dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:text="TextView\nTextView\nTextView\nTextView\nTextView\nTextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="6pt" />

                        <TextView
                            android:id="@+id/SL2_wed_menu"
                            android:layout_width="65dp"
                            android:layout_height="110dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:text="TextView\nTextView\nTextView\nTextView\nTextView\nTextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="6pt" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/SL2_thu_text"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:text="목요일"
                            android:textAlignment="center"
                            android:textColor="@color/test"
                            android:textSize="10pt"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/SL2_fri_text"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:text="금요일"
                            android:textAlignment="center"
                            android:textColor="@color/test"
                            android:textSize="10pt"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/SL2_sat_text"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:text="토요일"
                            android:textAlignment="center"
                            android:textColor="@color/test"
                            android:textSize="10pt"
                            android:textStyle="normal|bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/SL2_thu_menu"
                            android:layout_width="65dp"
                            android:layout_height="110dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:text="TextView\nTextView\nTextView\nTextView\nTextView\nTextView"
                            android:textAlignment="center"
                            android:textColor="@color/test"
                            android:textSize="6pt" />

                        <TextView
                            android:id="@+id/SL2_fri_menu"
                            android:layout_width="65dp"
                            android:layout_height="110dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:text="TextView\nTextView\nTextView\nTextView\nTextView\nTextView"
                            android:textAlignment="center"
                            android:textColor="@color/test"
                            android:textSize="6pt" />

                        <TextView
                            android:id="@+id/SL2_sat_menu"
                            android:layout_width="65dp"
                            android:layout_height="110dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:text="\n아쉽게도\n없어요"
                            android:textAlignment="center"
                            android:textColor="@color/test"
                            android:textSize="7pt" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:id="@+id/SL2_student_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/button_style"
                        android:text="학식 메뉴"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_blue_light"
                        android:textSize="11pt"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/SL_student_menu2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="학식(교직원4,000원, 학생3,500원), 청국장비빔밥(4,500원), \n돈까스(4,500원), 볶음밥류(3,500원)"
                        android:textAlignment="center"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/SL2_student_menu1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="라면(2,000원), 떡라면(2,500원), 만두라면(2,500원), \n치즈라면(2,500원), 짜장면(3,000원), 공기밥(500원)"
                        android:textAlignment="center"
                        android:textColor="@android:color/black" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </TabHost>
</LinearLayout>