<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:text="등록하기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LG_confirm_btn"
        android:layout_weight="0.05"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="00월 00일 00"
        android:layout_width="match_parent"
        android:id="@+id/LG_title_text"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="12pt"
        android:background="@drawable/xml_border"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="60dp" />

    <TextView
        android:text="메뉴"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:id="@+id/LG_menu_text"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/LG_title_text"
        android:layout_centerHorizontal="true"
        android:layout_height="150dp"
        android:textSize="9pt" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:id="@+id/LG_grade_list"
        android:background="@drawable/xml_line_background"
        android:layout_below="@+id/LG_menu_text"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="별점과 한 줄 평가를 써주세요"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LG_text"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_below="@+id/LG_grade_list"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LG_ratingbar"
        android:isIndicator="false"
        android:numStars="5"
        android:layout_below="@+id/LG_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="평점"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/LG_ratingbar"
        android:layout_toEndOf="@+id/LG_ratingbar"
        android:layout_marginBottom="17dp"
        android:id="@+id/LG_rating_text"
        android:textSize="10pt"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <TextView
        android:text="기숙사"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LG_location"
        android:textAlignment="textStart"
        android:textStyle="normal|bold"
        android:textSize="10pt"
        android:layout_above="@+id/LG_menu_text"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:inputType="textPersonName"
        android:maxLength="60"
        android:ems="10"
        android:id="@+id/LG_grade_edit"
        android:textAlignment="center"
        android:hint="30자 이내로 입력해주세요"
        android:background="@drawable/xml_line_background"
        android:layout_weight="0.88"
        android:layout_above="@+id/LG_confirm_btn"
        android:layout_alignParentEnd="true" />

</RelativeLayout>