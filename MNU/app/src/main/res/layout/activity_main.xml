<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mokpo.jeongbin.mnu.MainActivity"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:background="@android:color/background_light"
            android:theme="?attr/actionBarTheme"
            android:minHeight="0dp"
            android:id="@+id/M_toolbar"
            android:layout_margin="5dp"
            android:layout_weight="0.05"
            android:elevation="0dp"
            android:layout_height="80dp">

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/M_logo_image"
                android:background="@drawable/small_icon"
                android:layout_height="40dp"
                android:layout_width="60dp"
                android:scaleType="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="현재날씨"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/M_weather"
                android:textStyle="normal|bold"
                android:textAlignment="textEnd"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:textSize="8pt" />
        </RelativeLayout>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.05">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    app:srcCompat="@drawable/lunch_btn"
                    android:id="@+id/M_lunch_btn"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:elevation="0dp"
                    android:layout_width="match_parent"
                    android:background="@android:color/background_light"
                    android:layout_height="140dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="오늘 식단표"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/M_lunch_text"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textStyle="normal|bold"
                        android:textSize="15pt"
                        android:textColor="@android:color/white"
                        android:textAlignment="center" />
                </RelativeLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/bus_btn"
                    android:id="@+id/M_bus_btn"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:scaleType="centerCrop"
                    android:layout_height="140dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="버스 시간표"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/M_bus_text"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:textStyle="normal|bold"
                        android:textSize="15pt"
                        android:textColor="@android:color/background_light"
                        android:typeface="sans" />
                </RelativeLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/intranet_btn"
                    android:id="@+id/M_intranet_btn"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@android:color/background_light"
                    android:layout_height="140dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="기숙사 인트라넷"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/M_intranet_text"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textStyle="normal|bold"
                        android:textAlignment="center"
                        android:textSize="15pt"
                        android:textColor="@android:color/background_light"
                        android:typeface="sans" />
                </RelativeLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/book_btn"
                    android:id="@+id/M_book_btn"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:scaleType="centerCrop"
                    android:layout_height="140dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="중앙도서관 검색"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/M_book_text"
                        android:textSize="15pt"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:typeface="sans"
                        android:textColor="@android:color/background_light"
                        android:textStyle="normal|bold" />
                </RelativeLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/weather_btn"
                    android:id="@+id/M_weather_btn"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@android:color/background_light"
                    android:layout_height="140dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="오늘의 날씨"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/M_weather_text"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="15pt"
                        android:typeface="sans"
                        android:textStyle="normal|bold"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light" />
                </RelativeLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/fa_btn"
                    android:id="@+id/M_QA_Btn"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:scaleType="centerCrop"
                    android:layout_height="140dp" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
