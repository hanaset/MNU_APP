<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jeongbin.mnu.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            app:srcCompat="@drawable/icon1"
            android:id="@+id/M_lunch_btn"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_height="110dp"
            android:elevation="0dp"
            android:layout_margin="5dp"
            android:layout_width="110dp"
            android:background="@android:color/background_light" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/icon2"
            android:id="@+id/M_weather_btn"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="@android:color/background_light" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/M_bus_btn"
            android:layout_margin="5dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/icon3"
            android:id="@+id/M_book_btn"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="@android:color/background_light" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/icon4"
            android:id="@+id/M_intranet_btn"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:background="@android:color/background_light" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageButton"
            android:layout_margin="5dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
